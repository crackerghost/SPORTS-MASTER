    <div class="register-form">
        <h1>User Registration</h1>
        <form class="registrationForm" action="/register" method="post">
        <input type="text" style="margin: 5px;" name="username" id="name" placeholder="Name" required>
        <input type="text" style="margin: 5px;" name="gender" id="gender" placeholder="Gender" required>
            <input type="email"  style="margin: 5px;" name="email" id="email" placeholder="Email" required>
            <input type="password" style="margin: 5px;" name="password" id="password" placeholder="Password" required>
            <input type="text" style="margin: 5px;" name="sports" id="sports" placeholder="Sports Name" required>
            <input type="text"name="location" style="margin: 5px;" id="location" placeholder="Country" required>
            <input type="text"name="state" style="margin: 5px;" id="state" placeholder="State" required>
            <input type="text"name="city" style="margin: 5px;" id="city" placeholder="City" required>
             <input type="number"name="skills" style="margin: 5px;" id="skills" placeholder="Experience" required max="5" maxlength="1">
            <button type="submit" class="register-btn" style="margin: 5px;"  onclick="showregister()">Register</button>
            <p class="message">{{message}}</p>
        </form>
    </div>
    

