<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
 
</head>
<link rel="stylesheet" href="dash.css">
<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
<body>
    
<!-- navbar -->
    <nav class="navbar navbar-expand-lg fixed-top">
  <div class="container-fluid">
    
<img src="/img/logo.png"  height="50px" width="50px" alt="Logo">

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarText"
      aria-controls="navbarText"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
      <span class="navbar-text">
        <a
          class="nav-link active"
          style=" text-align:center; height:50px; width:100px; color: white; margin-right: 20px; cursor:pointer;padding:8px; border-radius:50px; background-color: #fe5344"
          aria-current="page"
          onclick="location.href='/homepage'"
        >Home</a>
       
      </span>
    </div>
  </div>
</nav>

 <div class="dashboard">
    <div class="user-info">
      <img class="profile" id="profile" src="/img/profile.png" alt="Profile Photo" height="200px" width="200px" id="profile-photo">
      <h2 class="title" style="color: #fe5344;">Welcome, <span id="username">{{ userData.name }}</span>!</h2>
      <p><span id="email">{{ userEmail }}</span></p>
       <p>Gender: <span id="gender">{{ userData.gender }}</span></p>
      <p>Like To Play <span id="email"><b>{{ userData.sports }}</b></span></p>
      <p>Experience Level: <span id="email"><b>{{ userData.skills }}</b></span></p>
      <form action="/updatesport" method="post">
          <label for="selectedSport">Select Sport:</label>
         <select name="selectedSport" id="selectedSport">
         
        <option value="cricket">Cricket</option>
        <option value="hockey">Hockey</option>
        <option value="badminton">Badminton</option>
        <option value="football">Football</option>
        <option value="tennis">Tennis</option>
        <option value="golf">Golf</option>
        <option value="cycling">Cycling</option>
        <option value="hiking">Hiking</option>
        </select>
         <label for="selectedexp">Select Experience:</label>
         <select name="selectedexp" id="selectedexp">
         <option value="1">1</option>
         <option value="2">2</option>
         <option value="3">3</option>
         <option value="4">4</option>
         <option value="5">5</option>

        </select>
        
        <input type="submit"  id="submit" value="Update">
    </form>
    </div>
  </div>
<script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
  const gender = document.getElementById('gender')
  const profile = document.getElementById('profile')

        if(gender.innerText.toLowerCase().includes('male') ){
         
          profile.style.height = '100px'
          profile.style.width = '100px'
         
        }else{
           profile.src = '/img/profilef.png'
          profile.style.height = '100px'
          profile.style.width = '100px'
        }
      
    </script>
</body>
</html>
